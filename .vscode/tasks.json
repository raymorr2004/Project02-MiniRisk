{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Mini-RISK (all sources)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g",
        "-Wall",
        "-Wextra",
        "-pedantic",
        "main.cpp",
        "Game.cpp",
        "src/Board.cpp",
        "src/MapSpec.cpp",
        "src/Rules.cpp",
        "src/IO.cpp",
        "src/RandomAI.cpp",
        "src/Utils.cpp",
        "-Isrc",
        "-o",
        "${workspaceFolder}/main"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
